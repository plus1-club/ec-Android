<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="club.plus1.ec_online.viewmodels.MenuViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/splash_screen"
            style="@style/AppTheme.ECOnline.Logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/splash"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/Line1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/layoutRequest"
                style="@style/AppTheme.ECOnline.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onCheckExistence(context)}"
                android:orientation="horizontal"
                android:padding="2dp"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/imageRequest"
                    style="@style/AppTheme.ECOnline.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:contentDescription="@string/text_product_existence"
                    android:padding="5dp"
                    android:src="@drawable/request" />

                <TextView
                    android:id="@+id/textRequest"
                    style="@style/AppTheme.ECOnline.CardText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/text_product_existence"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight,NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOrder"
                style="@style/AppTheme.ECOnline.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onMakeOrder(context)}"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/imageOrder"
                    style="@style/AppTheme.ECOnline.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:contentDescription="@string/text_make_order"
                    android:padding="0dp"
                    android:src="@drawable/order" />

                <TextView
                    android:id="@+id/textOrder"
                    style="@style/AppTheme.ECOnline.CardText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/text_make_order"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Line2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/layoutBasket"
                style="@style/AppTheme.ECOnline.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onCart(context)}"
                android:orientation="horizontal"
                android:padding="2dp"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/imageBasket"
                    style="@style/AppTheme.ECOnline.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:contentDescription="@string/text_cart"
                    android:padding="0dp"
                    android:src="@drawable/basket" />

                <TextView
                    android:id="@+id/textBasket"
                    style="@style/AppTheme.ECOnline.CardText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/text_cart"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight,NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUnconfirmed"
                style="@style/AppTheme.ECOnline.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onUnconfirmed(context)}"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/imageUnconfirmed"
                    style="@style/AppTheme.ECOnline.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:contentDescription="@string/text_unconfirmed"
                    android:padding="5dp"
                    android:src="@drawable/unconfirmed" />

                <TextView
                    android:id="@+id/textUnconfirmed"
                    style="@style/AppTheme.ECOnline.CardText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/text_unconfirmed"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Line3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/layoutReserved"
                style="@style/AppTheme.ECOnline.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onReserves(context)}"
                android:orientation="horizontal"
                android:padding="2dp"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/imageReserved"
                    style="@style/AppTheme.ECOnline.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:contentDescription="@string/text_reserves"
                    android:padding="0dp"
                    android:src="@drawable/reserved" />

                <TextView
                    android:id="@+id/textReserved"
                    style="@style/AppTheme.ECOnline.CardText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/text_reserves"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight,NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOrdered"
                style="@style/AppTheme.ECOnline.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onOrders(context)}"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/imageOrdered"
                    style="@style/AppTheme.ECOnline.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:contentDescription="@string/text_orders"
                    android:padding="0dp"
                    android:src="@drawable/ordered" />

                <TextView
                    android:id="@+id/textOrdered"
                    style="@style/AppTheme.ECOnline.CardText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/text_orders"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Line4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/layoutCanceled"
                style="@style/AppTheme.ECOnline.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onCanceled(context)}"
                android:orientation="horizontal"
                android:padding="2dp"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/imageCanceled"
                    style="@style/AppTheme.ECOnline.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:contentDescription="@string/text_canceled"
                    android:padding="5dp"
                    android:src="@drawable/canceled" />

                <TextView
                    android:id="@+id/textCanceled"
                    style="@style/AppTheme.ECOnline.CardText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/text_canceled"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight,NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutShipped"
                style="@style/AppTheme.ECOnline.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="@{()->viewModel.onHistory(context)}"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/imageShipped"
                    style="@style/AppTheme.ECOnline.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:contentDescription="@string/text_history"
                    android:padding="5dp"
                    android:src="@drawable/shipped" />

                <TextView
                    android:id="@+id/textShipped"
                    style="@style/AppTheme.ECOnline.CardText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/text_history"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buttonExit"
            style="@style/AppTheme.ECOnline.Button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="@{() -> viewModel.onExit(context)}"
            android:text="@string/text_exit"
            android:textSize="18sp" />

    </LinearLayout>
</layout>