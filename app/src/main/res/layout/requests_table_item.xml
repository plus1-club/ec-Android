<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="club.plus1.ec_online.viewmodels.RequestItemViewModel" />
    </data>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingTop="1dp"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkMark"
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:backgroundTintMode="add"
                android:buttonTint="@{viewModel.color}"
                android:checked="@={viewModel.check}"
                android:onClick="@{(view) -> viewModel.onFlagClick(view)}"
                android:gravity="bottom"
                android:textSize="14sp" />

            <!--suppress AndroidUnknownAttribute -->
            <EditText
                android:id="@+id/editCount"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@{viewModel.color}"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="number|text"
                android:text="@={`` + viewModel.count}"
                android:onTextChanged="@{(s, start, before, count) -> viewModel.onTextChanged(context, s, start, before, count)}"
                android:textAlignment="center"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:id="@+id/textProduct"
                style="@style/AppTheme.ECOnline.Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:text="@={viewModel.product}"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editStatus"
                style="@style/AppTheme.ECOnline.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="@={viewModel.status}"
                android:textAlignment="viewStart"
                android:textColor="@{viewModel.color}"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </LinearLayout>
</layout>