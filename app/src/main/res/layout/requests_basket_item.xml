<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingTop="1dp"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@{viewModel.color}"
                android:checked="@={viewModel.mark}"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textProduct"
                style="@style/AppTheme.ECOnline.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="@={viewModel.product}"
                android:textAlignment="viewStart"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelCount"
                    style="@style/AppTheme.ECOnline.Text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:labelFor="@id/editCount"
                    android:padding="0dp"
                    android:text="@string/label_count"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:ignore="NestedWeights" />

                <!--suppress AndroidUnknownAttribute -->
                <EditText
                    android:id="@+id/editCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@{viewModel.color}"
                    android:ems="10"
                    android:inputType="number|text"
                    android:onTextChanged="@{viewModel::onTextChanged}"
                    android:padding="10dp"
                    android:text="@={`` + viewModel.count}"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelPrice"
                        style="@style/AppTheme.ECOnline.Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:text="@string/label_price"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/labelSum"
                        style="@style/AppTheme.ECOnline.Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:text="@string/label_sum"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editPrice"
                        style="@style/AppTheme.ECOnline.Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:text="@{viewModel.price}"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/editSum"
                        style="@style/AppTheme.ECOnline.Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:text="@{viewModel.sum}"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/editStatus"
                    style="@style/AppTheme.ECOnline.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="5dp"
                    android:text="@={viewModel.status}"
                    android:textColor="@{viewModel.color}"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <data>
        <variable
            name="viewModel"
            type="club.plus1.ec_online.viewmodel.RequestItemViewModel" />
    </data>
</layout>