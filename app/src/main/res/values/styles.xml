<resources>

    <style name="AppTheme.ECOnline" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="AppTheme.ECOnline.Logo" parent="AppTheme.ECOnline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="AppTheme.ECOnline.Button" parent="AppTheme.ECOnline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.ECOnline.Edit" parent="AppTheme.ECOnline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.ECOnline.Text" parent="AppTheme.ECOnline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.ECOnline.Link" parent="AppTheme.ECOnline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="AppTheme.ECOnline.Header" parent="AppTheme.ECOnline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.ECOnline.Card" parent="AppTheme.ECOnline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.ECOnline.CardText" parent="AppTheme.ECOnline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.ECOnline.ImageButton" parent="AppTheme.ECOnline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>


</resources>
