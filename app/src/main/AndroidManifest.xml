<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="club.plus1.ec_electric">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/full_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ECElectric"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.EnterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MenuActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.RequestByCodeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.RequestFromExcelActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.RequestTableActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.RequestBasketActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.InvoiceTableActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.InvoiceDetailsActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>