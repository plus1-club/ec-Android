<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.electric.ec.online">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/full_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ECOnline"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name="ru.electric.ec.online.views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.electric.ec.online.views.EnterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.electric.ec.online.views.MenuActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ru.electric.ec.online.views.RequestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ru.electric.ec.online.views.RequestsSearchActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ru.electric.ec.online.views.RequestsBasketActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ru.electric.ec.online.views.InvoiceTableActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ru.electric.ec.online.views.InvoiceDetailsActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>